<Window x:Class="WeatherAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherAPI"
        mc:Ignorable="d"
        Icon="Images/icon.png"
        Title="Weather" Height="450" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <TextBox Background="DarkSlateBlue" x:Name="cityTextBox" FontSize="25" PreviewKeyDown="cityTextBox_PreviewKeyDown" FontFamily="Comic Sans MS"/>

        <ListBox  x:Name="listBox" Grid.Row="1">
            <ListBox.Background>
                <ImageBrush ImageSource="Images/space.png"/>
            </ListBox.Background>
        </ListBox>
    </Grid>
</Window>
